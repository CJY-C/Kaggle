{
    "name": "Kaggle Dev CPU",
    "image": "gcr.io/kaggle-images/python", // Remember to pull latest before rebuilding.
    "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "eamodio.gitlens",
        "github.copilot",
        "github.copilot-chat",
        "redjue.git-commit-plugin",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.jupyter-renderers",
        "mechatroner.rainbow-csv",
        "janisdd.vscode-edit-csv"
    ],
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "python.pythonPath": "/opt/conda/bin/python"
    },
    "devPort": 8887,
    "shutdownAction": "none",
    "mounts": [
        "type=bind,source=${localWorkspaceFolder}/data/input,target=/kaggle/input"
    ],
    "containerEnv": {
    "KAGGLE_MODE": "DEV"
    },
    "postCreateCommand": [".devcontainer/setup.sh"],
    "postAttachCommand": [".devcontainer/setup-mounted.sh", "git config --global --add safe.directory ${containerWorkspaceFolder}"]
}
